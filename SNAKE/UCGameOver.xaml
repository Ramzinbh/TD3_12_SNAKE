<UserControl x:Class="SNAKE.UCGameOver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SNAKE"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/fondGameOver.png"/>
        </Grid.Background>
        <Button x:Name="butRejouer" Content="Rejouer" HorizontalAlignment="Left" Margin="157,314,0,0" VerticalAlignment="Top" Height="87" Width="200" FontWeight="Bold" FontSize="24" Foreground="#FF047500" IsEnabled="False">
            <Button.Background>
                <ImageBrush ImageSource="images/fondBouton.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="butQuitter" Content="Quitter" HorizontalAlignment="Left" Margin="454,314,0,0" VerticalAlignment="Top" Height="87" Width="200" FontWeight="Bold" FontSize="24" Foreground="#FF047500" IsEnabled="False">
            <Button.Background>
                <ImageBrush ImageSource="images/fondBouton.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Image Margin="50,-43,50,136" Source="/images/GameOver.png" Stretch="Fill"/>
    </Grid>
</UserControl>
