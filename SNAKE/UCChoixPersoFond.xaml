<UserControl x:Class="SNAKE.UCChoixPersoFond"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SNAKE"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/backgroundMenu.png"/>
        </Grid.Background>
        <RadioButton x:Name="rbVert" Height="150" Margin="88,150,502,150" Click="rbVert_Click" >
            <RadioButton.Content>
                <Image Source="images/serpentVert.png" Width="195" Height="138" Stretch="UniformToFill"/>
            </RadioButton.Content>
        </RadioButton>
        <RadioButton x:Name="rbRouge" Margin="481,150,104,150" Click="rbRouge_Click" >
            <RadioButton.Content>
                <Image Source="images/serpentRouge.png" Width="190" Height="139" Stretch="UniformToFill"/>
            </RadioButton.Content>
        </RadioButton>
        <Button x:Name="butJouer" Content="Jouer" HorizontalAlignment="Center" Margin="0,314,0,0" VerticalAlignment="Top" Height="87" Width="200" FontWeight="Bold" FontSize="24" Foreground="#FF047500" IsEnabled="False">
            <Button.Background>
                <ImageBrush ImageSource="images/fondBouton.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Label Content="CHOIX DU SKIN" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Width="366" FontWeight="Bold" Height="72" FontSize="48" Foreground="#FF034C00"/>

    </Grid>
</UserControl>
