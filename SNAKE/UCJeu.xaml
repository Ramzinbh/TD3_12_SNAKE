<UserControl x:Class="SNAKE.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SNAKE"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Canvas x:Name="canvasJeu" Loaded="UserControl_Loaded" Grid.RowSpan="2">
            <Image x:Name="imgFond1" Source="/images/fondJeu.jpg" HorizontalAlignment="Center" Canvas.Bottom="0" VerticalAlignment="Top" Height="1201" Width="800" />
            <Image x:Name="imgFond2" Source="/images/fondJeu.jpg" Canvas.Bottom="1201" Height="1201" Width="800" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Image x:Name="serpent" Height="135" Canvas.Left="364" Source="/images/serpentVertJeu_0.png" Stretch="Fill" Canvas.Top="285" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>
        <Menu Height="20" Width="800" Grid.Row="0">
            <MenuItem Header="_Parametre" Click="MenuItem_Click"/>
        </Menu>
    </Grid>
</UserControl>
