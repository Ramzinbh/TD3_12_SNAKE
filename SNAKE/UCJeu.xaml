<UserControl x:Class="SNAKE.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SNAKE"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="canvasJeu" Loaded="UserControl_Loaded" Grid.RowSpan="2">
            <Image x:Name="imgFond1" Source="/images/fondJeu.jpg" HorizontalAlignment="Center" Canvas.Bottom="0" VerticalAlignment="Top" Height="1200" Width="800" />
            <Image x:Name="imgFond2" Source="/images/fondJeu.jpg" Canvas.Bottom="1200" Height="1200" Width="800" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Image x:Name="serpent" Height="120" Canvas.Left="385" Source="/images/serpentVertJeu_0.png" Stretch="Fill" Canvas.Top="290" Width="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image x:Name="imgAigle1" Source="/images/aigle.png" Stretch="UniformToFill" Height="45" Canvas.Left="216" Canvas.Top="-60" Width="65"/>
            <Image x:Name="imgAigle2" Source="/images/aigle.png" Stretch="UniformToFill" Height="45" Canvas.Left="568" Canvas.Top="-60" Width="65" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image x:Name="imgPomme" Source="/images/pomme.png" Height="39" Canvas.Left="414" Canvas.Top="-124" Width="33" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Canvas>
        <Menu x:Name="menuJeu" Height="20" Width="800" Grid.Row="0">
            <MenuItem Header="_Parametre" Click="MenuItem_Click"/>
        </Menu>


    </Grid>
</UserControl>
